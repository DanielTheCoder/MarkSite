<?xml version="1.0"?>
<configuration>

  <appSettings>
    <!-- The relative path to the folder containing the markdown files -->
    <add key="pageFolder" value="~/pages" />
    <!-- Change the editURL to point to the right GitHub repo -->
    <add key="editUrl" value="https://github.com/madskristensen/MarkSite/blob/master/src/pages{0}" />

    <add key="vs:enableBrowserLink" value="true" />
  </appSettings>

  <system.web>
    <compilation debug="false" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" enableVersionHeader="false" />
    <customErrors mode="RemoteOnly" />
  </system.web>

  <system.webServer>
    <rewrite>
      <rules>
        <rule name="BrowserLink" stopProcessing="true">
          <match url="__browserLink" />
          <action type="None" />
        </rule>

        <rule name="sitemap.xml" patternSyntax="Wildcard">
          <match url="sitemap.xml"/>
          <action type="Rewrite" url="views/robots/sitemap.cshtml"/>
        </rule>

        <rule name="Robots.txt" patternSyntax="Wildcard">
          <match url="robots.txt"/>
          <action type="Rewrite" url="views/robots/robots.cshtml"/>
        </rule>

        <rule name="Index" patternSyntax="Wildcard">
          <match url="*"/>
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.cshtml?path={R:0}"/>
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>