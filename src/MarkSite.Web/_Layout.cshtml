<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@Page.Title - Visual Studio</title>
	<meta name="description" content="@Page.Description" />
	<meta name="keywords" content="@Page.Keywords" />
	<link href="/assets/site.css" rel="stylesheet" />
</head>
<body>

	<header role="banner">
		<div class="container">
			<a href="/">Web Development with Visual Studio</a>
		</div>
	</header>

	<div class="container">
		<nav>
			@Helpers.RenderMenu(PageSystem.IndexPage.Children)
		</nav>

		<main role="main">
			@*@Helpers.RenderBreadcrumb(PageSystem.GetCurrentPage(Request))*@
			@RenderBody()
		</main>
	</div>

	<footer role="contentinfo">
		<div class="container">
			My footer
		</div>
	</footer>


	<script src="/assets/menu.js" async></script>
</body>
</html>
